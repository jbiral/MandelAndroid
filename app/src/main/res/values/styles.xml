<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTitleStyle">
        <item name="android:color">#B6B6B6</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:color">#666666</item>
    </style>

    <style name="SmallTitle" parent="BaseTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="NormalText" parent="BaseTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NormalListText" parent="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
